 {{#if pokemon}}
  <div class="col-md-6">
         {{#each pokemon as |poke|}}
    <h3>{{poke.name}}</h3>
    <img src="{{poke.sprite}}" alt="Pokemon Sprite">    
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>#{{poke.id}}</h4>
        <h4>{{poke.type}} type</h4>        
        <h4>{{poke.evolution}}</h4>
        <h4>{{poke.trigger}}</h4>
        {{#if poke.itemSprite}}
            <img src="{{poke.itemSprite}}" alt="Item Sprite">    
        {{/if}}
        <h5>Add to <a href="#" id="addToTeam" data-pokemon-id="{{pokemon.id}}">Team</a>?</h5>
        <p id="addToPokedexResponse"></p> <!-- Empty paragraph to display response -->
      </div>
    </div>
  </div>
  {{/each}}
</div>
  {{/if}}

<script src="/js/pokedex.js"></script>