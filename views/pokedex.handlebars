 {{#if pokedexEntries}}
  <div class="col-md-6">
        {{#each pokedexEntries as |pokemon|}}

    <h3>{{pokemon.name}}</h3>
    <img src="{{pokemon.sprite}}" alt="Pokemon Sprite">    
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>#{{pokemon.id}}</h4>
        <h4>{{pokemon.type}} type</h4>        
        <h4>{{pokemon.evolution}}</h4>
        <h4>{{pokemon.trigger}}</h4>
        {{#if pokemon.itemSprite}}
            <img src="{{pokemon.itemSprite}}" alt="Item Sprite">    
        {{/if}}
        <h5>Add to a <a href="#" id="addToTeam" data-pokemon-id="{{pokemon.id}}">Team</a>?</h5>
        <p id="addToTeamResponse"></p> <!-- Empty paragraph to display response -->
      </div>
    </div>
  </div>
      {{/each}}
</div>
  {{/if}}

<script src="/js/pokedex.js"></script>