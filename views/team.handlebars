 {{#if teamList}}
  <div class="col-md-6">
        {{#each teamList as |team|}}
  <h3><button id="deleteButton" data-team-id="{{team.dataValues.name}}">❌</button> {{team.dataValues.name}} <button id="editButton">✎</button></h3>
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon1}}">❌</button> {{team.dataValues.pokemon1}}</h4>
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon2}}">❌</button> {{team.dataValues.pokemon2}}</h4>
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon3}}">❌</button> {{team.dataValues.pokemon3}}</h4>
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon4}}">❌</button> {{team.dataValues.pokemon4}}</h4>
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon5}}">❌</button> {{team.dataValues.pokemon5}}</h4>
      <h4><button id="deleteButton" data-pokemon-id="{{team.dataValues.pokemon6}}">❌</button> {{team.dataValues.pokemon6}}</h4>
    </div>
  </div>
{{/each}}
    <button class="btn-small create-team-button">Create New Team</button>
</div>
 {{/if}}
    <!-- Create Team Form -->
  <form id="create-team-form">
  <label for="team-name">Team Name:</label>
  <input type="text" id="team-name" name="team-name" required>

  <label for="pokemon1">Pokémon 1:</label>
  <input type="text" id="pokemon1" name="pokemon1">

  <label for="pokemon2">Pokémon 2:</label>
  <input type="text" id="pokemon2" name="pokemon2">

  <label for="pokemon3">Pokémon 3:</label>
  <input type="text" id="pokemon3" name="pokemon3">

  <label for="pokemon4">Pokémon 4:</label>
  <input type="text" id="pokemon4" name="pokemon4">

  <label for="pokemon5">Pokémon 5:</label>
  <input type="text" id="pokemon5" name="pokemon5">

  <label for="pokemon6">Pokémon 6:</label>
  <input type="text" id="pokemon6" name="pokemon6">

  <button type="submit" id="submit-button">Create Team</button>
</form>
 




<script src="/js/team.js"></script>


