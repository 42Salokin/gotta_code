<div class="row">
  <div class="col-md-6">
    <h2>I choose you...</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="search">pokemon name:</label>
        <input class="form-input" type="text" id="search" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">search</button>
      </div>
    </form>
  </div>

  {{!-- {{#if pokemon.length}} --}}
  <div class="col-md-6">
    <h3>{{pokemon.name}}!</h3>
    <img src="{{pokemon.sprite}}" alt="Pokemon Sprite">


    {{!-- {{#each pokemon as |poke|}} --}}
    
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>#{{pokemon.id}}</h4>
        <h4>{{pokemon.type}} type</h4>        
        <h4>{{pokemon.evolution}}</h4>
        <h4>{{pokemon.trigger}}</h4>
      </div>
    </div>
    {{!-- {{/each}} --}}
  </div>
  {{!-- {{/if}} --}}
</div>

<script src="../public/js/search.js"></script>